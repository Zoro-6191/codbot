{
    // bot wide settings
    "codbot": 
    {
        
        // As to be attached to all bot msgs sent. Although server sided prefix will also be there, which by default is "^2Server: ^7"
        // to remove that, paste this in your server.cfg
        //      seta sv_consayname ""
        //      seta sv_contellname ""
        // Alternatively, you can set "botprefix" setting to empty and use those above commands. Or you could use both
        "botprefix": "^1[^3CODBOT^1]^7:",
        "timezone": "IST",
        // print commands initiated by everyone in console
        "logcommands": true 
    },

    // choose which plugins are enabled
    "plugins":
    {
        // admin plugin = big daddy plugin. Most of the cmds get processed in here
        "admin": true,

        // xlrstats plugin = for storing player kills/deaths etc when they're registered
        "xlr": false
    },

    // command settings
    "cmd":
    {
        "prefix": "!",

        // loud: to use when to print command query to global chat
        "prefix_loud": "@",

        // commands to bypass
        // could be useful when 1 specific command is causing problems like errors/misuse
        "bypass": [ "test", "potty" ]
    },

    // database info
    "mysqldb": 
    {
        "host": "localhost",
        "port": 3306,   // default: 3306
        "user": "codbot", // avoid root whenever possible
        "password": "password",
        "database": "codbot"
    },

    // cod4 server info
    "server": 
    {
        "rcon_ip": "localhost",
        "port": 28960,
        "rcon_password": "rconpass",
        "public_ip": "snr.vfesports.in",    // domain name works too. eg: "143.110.191.162" or "snr.vfesports.in"
        "logfile": "H:/Games/Call of Duty Modern Warfare/mods/vf_snr_promod-ranked/games_mp.log"    // bot cant work without proper logfile specification
    }
}